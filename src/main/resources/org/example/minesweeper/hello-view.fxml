<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.minesweeper.MinesweeperController"
      spacing="10" style="-fx-background-color: #f0f0f0;">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <!-- Top Panel -->
    <VBox spacing="5" style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-border-color: #888; -fx-border-width: 1;">
        <!-- Settings Row -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Rows:" />
            <TextField fx:id="rowsField" prefWidth="50.0" text="9" />

            <Label text="Cols:" />
            <TextField fx:id="colsField" prefWidth="50.0" text="9" />

            <Label text="Mines:" />
            <TextField fx:id="minesField" prefWidth="50.0" text="10" />

            <Button fx:id="newGameButton"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="New Game" />

            <Button fx:id="exitButton"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Exit Game" />
        </HBox>

        <!-- Status Row -->
        <HBox alignment="CENTER" spacing="20">
            <Label fx:id="movesLabel" text="Moves: 0">
                <font>
                    <Font name="Arial Bold" size="14.0" />
                </font>
            </Label>

            <Label fx:id="gameStateLabel" text="Status: Playing" textFill="BLUE">
                <font>
                    <Font name="Arial Bold" size="14.0" />
                </font>
            </Label>

            <Label fx:id="minesLabel" text="Mines: 0/0">
                <font>
                    <Font name="Arial Bold" size="14.0" />
                </font>
            </Label>
        </HBox>
    </VBox>

    <!-- Game Grid -->
    <GridPane fx:id="gameGrid" alignment="CENTER"
              style="-fx-background-color: #888;"
              hgap="1" vgap="1" />

    <!-- Statistics Panel -->
    <VBox spacing="5" style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-border-color: #888; -fx-border-width: 1;">
        <Label text="Game Statistics">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Label>

        <Label fx:id="totalGamesLabel" text="Total Games: 0" />
        <Label fx:id="wonGamesLabel" text="Won Games: 0" />
        <Label fx:id="winRateLabel" text="Win Rate: 0.0%" />

        <Button fx:id="historyButton" text="Show Game History" />
    </VBox>
</VBox>
