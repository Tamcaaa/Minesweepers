<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="20" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.minesweeper.MinesweeperController"
      style="-fx-background-color: #f7f9fc; -fx-padding: 25;">

    <!-- TOP PANEL -->
    <VBox spacing="12" style="-fx-background-color: #ffffff; -fx-padding: 18; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">

        <!-- Settings -->
        <HBox spacing="12" alignment="CENTER">
            <Label text="Rows:" style="-fx-font-size: 13;" />
            <TextField fx:id="rowsField" text="9" prefWidth="50"
                       style="-fx-background-radius: 6; -fx-border-color: #cccccc; -fx-border-radius: 6;" />

            <Label text="Cols:" style="-fx-font-size: 13;" />
            <TextField fx:id="colsField" text="9" prefWidth="50"
                       style="-fx-background-radius: 6; -fx-border-color: #cccccc; -fx-border-radius: 6;" />

            <Label text="Mines:" style="-fx-font-size: 13;" />
            <TextField fx:id="minesField" text="10" prefWidth="50"
                       style="-fx-background-radius: 6; -fx-border-color: #cccccc; -fx-border-radius: 6;" />

            <Button fx:id="newGameButton" text="New Game"
                    onAction="#handleNewGame"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />

            <Button fx:id="exitButton" text="Exit Game"
                    onAction="#handleExit"
                    style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
        </HBox>

        <!-- Status Row -->
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 5;">
            <Label fx:id="movesLabel" text="Moves: 0"
                   style="-fx-font-size: 14;" />
            <Label fx:id="gameStateLabel" text="Status: Playing" textFill="#2196F3"
                   style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <Label fx:id="minesLabel" text="Mines: 0/0"
                   style="-fx-font-size: 14;" />
        </HBox>
    </VBox>

    <!-- GAME GRID -->
    <GridPane fx:id="gameGrid"
              alignment="CENTER"
              hgap="1" vgap="1"
              style="-fx-background-color: #ffffff; -fx-padding: 12; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 5, 0, 0, 2);" />

    <!-- STATISTICS PANEL -->
    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">
        <Label text="Game Statistics" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        <Label fx:id="totalGamesLabel" text="Total Games: 0" style="-fx-font-size: 14;" />
        <Label fx:id="wonGamesLabel" text="Won Games: 0" style="-fx-font-size: 14;" />
        <Button fx:id="historyButton" text="Show Game History"
                onAction="#showGameHistory"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 6;" />
    </VBox>
</VBox>
