<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.minesweeper.MinesweeperController"
      spacing="20" style="-fx-background-color: #fdfdfd; -fx-padding: 20;">

    <!-- Top Panel -->
    <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">

        <!-- Settings Row -->
        <HBox alignment="CENTER" spacing="12">
            <Label text="Rows:" style="-fx-font-size: 14;" />
            <TextField fx:id="rowsField" prefWidth="60" text="9" />

            <Label text="Cols:" style="-fx-font-size: 14;" />
            <TextField fx:id="colsField" prefWidth="60" text="9" />

            <Label text="Mines:" style="-fx-font-size: 14;" />
            <TextField fx:id="minesField" prefWidth="60" text="10" />

            <Button fx:id="newGameButton" text="New Game"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />

            <Button fx:id="exitButton" text="Exit Game"
                    style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
        </HBox>

        <!-- Status Row -->
        <HBox alignment="CENTER" spacing="25">
            <Label fx:id="movesLabel" text="Moves: 0" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <Label fx:id="gameStateLabel" text="Status: Playing" textFill="#0288D1" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <Label fx:id="minesLabel" text="Mines: 0/0" style="-fx-font-size: 14; -fx-font-weight: bold;" />
        </HBox>
    </VBox>

    <!-- Game Grid -->
    <GridPane fx:id="gameGrid" alignment="CENTER"
              style="-fx-background-color: #cfd8dc; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10;"
              hgap="2" vgap="2" />

    <!-- Statistics Panel -->
    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dcdcdc; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
        <Label text="Game Statistics" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        <Label fx:id="totalGamesLabel" text="Total Games: 0" style="-fx-font-size: 14;" />
        <Label fx:id="wonGamesLabel" text="Won Games: 0" style="-fx-font-size: 14;" />
        <Label fx:id="winRateLabel" text="Win Rate: 0.0%" style="-fx-font-size: 14;" />
        <Button fx:id="historyButton" text="Show Game History"
                style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-background-radius: 6;" />
    </VBox>
</VBox>
